<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #fff; /* White background */
        padding-top: 20px; /* Adjusted padding */
        margin-bottom: 20px; /* Adjusted margin */
    }

    .card {
        border: none;
        background-color: #f5f5f6; /* A subtle lightening of the grey */

        transition: box-shadow 0.3s;
        margin-bottom: 20px; /* Margin between cards */
    }

        .card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        text-align: center;
        color: #333;
        padding: 30px; /* Padding inside cards */
    }

        .card-body i {
            font-size: 3rem; /* Bigger icon size */
            margin-bottom: 20px; /* Spacing between icon and text */
            transition: color 0.3s; /* Smooth transition for color change */
        }

        .card-body span {
            font-size: 1.2rem; /* Bigger text size */
            display: block;
        }

        .card-body:hover i {
            color: #7cc43f; /* Hover color for icon */
        }

        .card-body:hover {
            color: #007bff;
        }

        h1{
            text-align:center;
        }
        
</style>
