@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <title>
        REAMI - LOGIN
    </title>
</head>
<div style="display: flex; justify-content: center; align-items: center; height: 98vh; background-color: #f3f3f4;overflow:hidden">
    <div style="width: 400px; padding: 40px; background-color: #fff; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);">

        <h2 style="margin-bottom: 30px; text-align: center; color: #878787;">Login</h2>

        <form asp-action="Login" method="post">
            <div style="margin-bottom: 20px;">
                <input type="text" id="username" name="username" placeholder="Username" style="width: 100%; padding: 12px; border: none; border-radius: 6px; background-color: #f0f0f0;">
            </div>

            <div style="margin-bottom: 30px;">
                <input type="password" id="password" name="password" placeholder="Password" style="width: 100%; padding: 12px; border: none; border-radius: 6px; background-color: #f0f0f0;">
            </div>

            <button type="submit" style="width: 100%; padding: 12px; background-color: #7cc43f; color: #FCFCFC; border: none; border-radius: 6px; cursor: pointer;">Login</button>

            <!-- Display error message if login fails -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger" style="margin-top: 10px; text-align: center; color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        border: 1px solid transparent;
        border-radius: 0.25rem;
        text-align: center;">
                    @Html.ValidationSummary()
                </div>
            }
        </form>

        <div style="margin-top: 20px; text-align: center;">
        </div>
    </div>
</div>
